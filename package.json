{
  "name": "@sidvind/better-ajv-errors",
  "version": "3.0.1",
  "description": "JSON Schema validation for Human",
  "repository": "https://github.com/ext/better-ajv-errors.git",
  "homepage": "https://github.com/ext/better-ajv-errors",
  "bugs": "https://github.com/ext/better-ajv-errors/issues",
  "sideEffects": false,
  "main": "./lib/cjs/index.js",
  "exports": {
    ".": {
      "types": "./typings.d.ts",
      "require": "./lib/cjs/index.js",
      "import": "./lib/esm/index.mjs"
    }
  },
  "module": "./lib/esm/index.mjs",
  "keywords": [
    "json-schema",
    "ajv",
    "ajv-errors"
  ],
  "author": "Rifat Nabi <to.rifat@gmail.com>",
  "maintainers": [
    "Rifat Nabi <to.rifat@gmail.com>",
    "Dmitrii Sorin <info@staypositive.ru>",
    "Tong Li"
  ],
  "license": "Apache-2.0",
  "types": "./typings.d.ts",
  "engines": {
    "node": ">= 16.14"
  },
  "files": [
    "lib",
    "typings.d.ts",
    "!**/__tests__",
    "!lib/test-helpers.js"
  ],
  "scripts": {
    "prebuild": "rm -rf lib",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "node build.js --cjs",
    "build:esm": "node build.js",
    "postbuild": "scripts/pkg",
    "prerelease": "npm run build",
    "prepare": "is-ci || husky",
    "release": "changeset publish",
    "prepack": "release-prepack --bundle",
    "postpack": "release-postpack",
    "prepublishOnly": "release-prepublish --bundle",
    "postpublish": "release-postpublish",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest && tsd",
    "test-ci": "jest --coverage --colors && tsd",
    "prescreenshot": "npm run build:cjs",
    "screenshot": "npx svg-term-cli --command='node screenshot' --out=./media/screenshot.svg --padding=5 --width=80 --height=13 --at=1000 --no-cursor --term iterm2 --profile='deep' --window",
    "dependabot:changeset": "node ./.changeset/create-dependabot-dependabot.js"
  },
  "dependencies": {
    "kleur": "^4.1.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.8",
    "@changesets/write": "0.3.2",
    "@html-validate/release-scripts": "6.7.0",
    "@humanwhocodes/momoa": "3.2.1",
    "ajv": "8.17.1",
    "ajv6": "npm:ajv@6.12.3",
    "ajv7": "npm:ajv@7.0.0",
    "ajv8": "npm:ajv@8.0.0",
    "esbuild": "0.24.0",
    "esbuild-jest2": "0.6.7",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.3",
    "eslint-plugin-prettier": "5.2.1",
    "git-format-staged": "3.1.1",
    "husky": "9.1.6",
    "is-ci": "3.0.1",
    "jest": "29.7.0",
    "jest-fixtures": "0.6.0",
    "jest-serializer-ansi-escapes": "3.0.0",
    "jsonpointer": "5.0.1",
    "leven": "3.1.0",
    "npm-pkg-lint": "2.4.1",
    "prettier": "3.3.3",
    "tsd": "0.31.2"
  },
  "peerDependencies": {
    "ajv": "^6.12.3 || ^7.0.0 || ^8.0.0"
  },
  "externalDependencies": [
    "kleur"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.[jt]s",
      "!**/__tests__/",
      "!**/*.d.ts",
      "!**/index.[jt]s"
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "json",
      "lcov"
    ],
    "snapshotSerializers": [
      "jest-serializer-ansi-escapes"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js"
    ],
    "transform": {
      "^.+\\.js$": "esbuild-jest2"
    }
  },
  "renovate": {
    "extends": [
      "gitlab>html-validate/renovate-config"
    ],
    "ignoreDeps": [
      "ajv4",
      "ajv5",
      "ajv6",
      "ajv7",
      "ajv8"
    ],
    "packageRules": [
      {
        "description": "Bundled runtime dependencies",
        "matchPackageNames": [
          "@humanwhocodes/momoa",
          "jsonpointer",
          "leven"
        ],
        "semanticCommitType": "fix"
      }
    ]
  }
}
