{
  "name": "better-ajv-errors",
  "version": "0.4.0",
  "description": "JSON Schema validation for Human",
  "main": "index.js",
  "author": "Rifat Nabi <to.rifat@gmail.com>",
  "maintainers": [
    "Rifat Nabi <to.rifat@gmail.com>",
    "Dmitrii Sorin <info@staypositive.ru>"
  ],
  "license": "MIT",
  "typings": "typings.d.ts",
  "files": [
    "lib",
    "index.js",
    "typings.d.ts"
  ],
  "dependencies": {
    "chalk": "^2.3.0",
    "jsonpointer": "^4.0.1",
    "leven": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "flow-bin": "^0.57.3",
    "jest": "^21.2.1",
    "jest-fixtures": "^0.6.0",
    "prettier": "^1.7.4"
  },
  "peerDependencies": {
    "ajv": "^4.11.8"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "prebuild": "yarn run clean",
    "build": "yarn build:modern && yarn build:legacy",
    "build:modern": "BABEL_ENV=modern babel src -d lib/modern/",
    "build:legacy": "BABEL_ENV=legacy babel src -d lib/legacy",
    "prepublish": "yarn build",
    "format": "prettier --write src/*.js src/**/*.js",
    "test": "node node_modules/.bin/jest"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailing-comma": "es5"
  }
}
