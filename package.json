{
  "name": "@sidvind/better-ajv-errors",
  "version": "1.0.2",
  "description": "JSON Schema validation for Human",
  "repository": "https://github.com/ext/better-ajv-errors.git",
  "homepage": "https://github.com/ext/better-ajv-errors",
  "bugs": "https://github.com/ext/better-ajv-errors/issues",
  "sideEffects": false,
  "main": "./lib/cjs/index.js",
  "exports": {
    ".": {
      "require": "./lib/cjs/index.js",
      "default": "./lib/esm/index.js"
    }
  },
  "module": "./lib/esm/index.js",
  "keywords": [
    "json-schema",
    "ajv",
    "ajv-errors"
  ],
  "author": "Rifat Nabi <to.rifat@gmail.com>",
  "maintainers": [
    "Rifat Nabi <to.rifat@gmail.com>",
    "Dmitrii Sorin <info@staypositive.ru>",
    "Tong Li"
  ],
  "license": "Apache-2.0",
  "types": "./typings.d.ts",
  "engines": {
    "node": ">= 12.13.0"
  },
  "files": [
    "lib",
    "typings.d.ts",
    "!**/__tests__",
    "!lib/test-helpers.js"
  ],
  "scripts": {
    "prebuild": "rm -rf lib",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "node build.js --cjs",
    "build:esm": "node build.js",
    "postbuild": "scripts/pkg",
    "prerelease": "npm run build",
    "prepare": "is-ci || husky install",
    "release": "changeset publish",
    "format": "prettier --write .",
    "test": "jest && tsd",
    "test-ci": "jest --coverage --colors && tsd",
    "screenshot": "svg-term --command='node screenshot' --out=./media/screenshot.svg --padding=5 --width=80 --height=13 --at=1000 --no-cursor --term iterm2 --profile='deep' --window",
    "dependabot:changeset": "node ./.changeset/create-dependabot-dependabot.js"
  },
  "dependencies": {
    "@babel/code-frame": "^7.16.0",
    "chalk": "^4.1.0",
    "json-to-ast": "^2.0.3",
    "jsonpointer": "^5.0.0",
    "leven": "^3.1.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.18.0",
    "@changesets/write": "0.1.5",
    "ajv": "8.7.1",
    "ajv4": "npm:ajv@4.11.8",
    "ajv5": "npm:ajv@5.0.0",
    "ajv6": "npm:ajv@6.0.0",
    "ajv7": "npm:ajv@7.0.0",
    "ajv8": "npm:ajv@8.0.0",
    "esbuild": "0.13.12",
    "esbuild-jest-transform": "1.1.0",
    "eslint": "8.2.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "25.2.4",
    "eslint-plugin-prettier": "4.0.0",
    "fast-glob": "3.2.7",
    "flow-bin": "0.164.0",
    "git-format-staged": "2.1.2",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "27.3.1",
    "jest-fixtures": "0.6.0",
    "npm-pkg-lint": "1.5.0",
    "prettier": "2.4.1",
    "pretty-format": "27.3.1",
    "svg-term-cli": "2.1.1",
    "tsd": "0.18.0"
  },
  "peerDependencies": {
    "ajv": "4.11.8 - 8"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.[jt]s",
      "!**/__tests__/",
      "!**/*.d.ts",
      "!**/index.[jt]s"
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "json",
      "lcov"
    ],
    "snapshotSerializers": [
      "pretty-format/build/plugins/ConvertAnsi"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js"
    ],
    "transform": {
      "^.+\\.js$": [
        "esbuild-jest-transform"
      ]
    }
  },
  "renovate": {
    "extends": [
      "@html-validate",
      "@html-validate:github"
    ],
    "ignoreDeps": [
      "ajv4",
      "ajv5",
      "ajv6",
      "ajv7",
      "ajv8"
    ]
  }
}
