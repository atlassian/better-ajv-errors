{
  "name": "@sidvind/better-ajv-errors",
  "version": "2.1.0",
  "description": "JSON Schema validation for Human",
  "repository": "https://github.com/ext/better-ajv-errors.git",
  "homepage": "https://github.com/ext/better-ajv-errors",
  "bugs": "https://github.com/ext/better-ajv-errors/issues",
  "sideEffects": false,
  "main": "./lib/cjs/index.js",
  "exports": {
    ".": {
      "require": "./lib/cjs/index.js",
      "default": "./lib/esm/index.mjs"
    }
  },
  "module": "./lib/esm/index.mjs",
  "keywords": [
    "json-schema",
    "ajv",
    "ajv-errors"
  ],
  "author": "Rifat Nabi <to.rifat@gmail.com>",
  "maintainers": [
    "Rifat Nabi <to.rifat@gmail.com>",
    "Dmitrii Sorin <info@staypositive.ru>",
    "Tong Li"
  ],
  "license": "Apache-2.0",
  "types": "./typings.d.ts",
  "engines": {
    "node": ">= 14.0.0"
  },
  "files": [
    "lib",
    "typings.d.ts",
    "!**/__tests__",
    "!lib/test-helpers.js"
  ],
  "scripts": {
    "prebuild": "rm -rf lib",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "node build.js --cjs",
    "build:esm": "node build.js",
    "postbuild": "scripts/pkg",
    "prerelease": "npm run build",
    "prepare": "is-ci || husky install",
    "release": "changeset publish",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest && tsd",
    "test-ci": "jest --coverage --colors && tsd",
    "prescreenshot": "npm run build:cjs",
    "screenshot": "svg-term --command='node screenshot' --out=./media/screenshot.svg --padding=5 --width=80 --height=13 --at=1000 --no-cursor --term iterm2 --profile='deep' --window",
    "dependabot:changeset": "node ./.changeset/create-dependabot-dependabot.js"
  },
  "dependencies": {
    "@babel/code-frame": "^7.16.0",
    "chalk": "^4.1.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.26.2",
    "@changesets/write": "0.2.3",
    "@humanwhocodes/momoa": "2.0.4",
    "ajv": "8.12.0",
    "ajv4": "npm:ajv@4.11.8",
    "ajv5": "npm:ajv@5.0.0",
    "ajv6": "npm:ajv@6.0.0",
    "ajv7": "npm:ajv@7.0.0",
    "ajv8": "npm:ajv@8.0.0",
    "esbuild": "0.18.12",
    "esbuild-jest": "0.5.0",
    "eslint": "8.44.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jest": "27.2.2",
    "eslint-plugin-prettier": "4.2.1",
    "flow-bin": "0.212.0",
    "git-format-staged": "3.0.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.6.1",
    "jest-fixtures": "0.6.0",
    "jest-serializer-ansi-escapes": "2.0.1",
    "jsonpointer": "5.0.1",
    "leven": "3.1.0",
    "npm-pkg-lint": "1.14.1",
    "prettier": "2.8.8",
    "svg-term-cli": "2.1.1",
    "tsd": "0.28.1"
  },
  "peerDependencies": {
    "ajv": "4.11.8 - 8"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.[jt]s",
      "!**/__tests__/",
      "!**/*.d.ts",
      "!**/index.[jt]s"
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "json",
      "lcov"
    ],
    "snapshotSerializers": [
      "jest-serializer-ansi-escapes"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js"
    ],
    "transform": {
      "^.+\\.js$": "esbuild-jest"
    }
  },
  "renovate": {
    "extends": [
      "gitlab>html-validate/renovate-config"
    ],
    "ignoreDeps": [
      "ajv4",
      "ajv5",
      "ajv6",
      "ajv7",
      "ajv8"
    ],
    "packageRules": [
      {
        "description": "Bundled runtime dependencies",
        "matchPackageNames": [
          "@humanwhocodes/momoa",
          "jsonpointer",
          "leven"
        ],
        "semanticCommitType": "fix"
      }
    ]
  }
}
